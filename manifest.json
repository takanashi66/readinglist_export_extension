{
    "manifest_version": 3,
    "name": "Reading List Side Panel",
    "version": "1.0",
    "description": "A side panel extension to manage Chrome Reading List items.",
    "permissions": [
        "readingList",
        "sidePanel",
        "activeTab",
        "tabs",
        "favicon",
        "storage",
        "scripting"
    ],
    "side_panel": {
        "default_path": "panel.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_title": "Open Reading List"
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "MacCtrl+Command+W"
            },
            "description": "Toggle Reading List Side Panel"
        },
        "add_to_reading_list": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "MacCtrl+Shift+L"
            },
            "description": "Add current tab to Reading List"
        }
    }
}